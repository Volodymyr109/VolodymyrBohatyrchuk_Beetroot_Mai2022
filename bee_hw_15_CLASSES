#task_1
class Person:

    def __init__(self, name, lastname, age):
        self.name = name
        self.lastname = lastname
        self.age = age

    @staticmethod
    def talk():
        print(f'my name is {my_person.name} {my_person.lastname},I am {my_person.age} years old')

my_person = Person('Volodoymyr', 'Bohatyrchuk', '21')
print(my_person.name)
print(my_person.lastname)
print(my_person.age)
Person.talk()

#task_2
class Dog:
    age_factor = 7

    def __init__(self, dog_age):
        self.dog_age = dog_age
        Dog.age_factor = int(self.dog_age) * 7

    def human_age():
        print(f'{my_dog.dog_age} years for dog age is {Dog.age_factor} years for human')
        return()

my_dog = Dog('10')  #АБО ЗРОБИТИ ЩОБ КОРИСТУВАЧ САМ ЗАДАВАВ ВІК СОБАКИ, ТОДІ - my_dog = Dog(input('How to put age your dog to equivalent to age of human: '))
#my_dog = Dog(input('How to put age your dog to equivalent to age of human: '))
print(my_dog.age_factor)
Dog.human_age()


