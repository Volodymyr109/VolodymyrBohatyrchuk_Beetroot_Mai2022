class Tvcontroller:

    def __init__(self, BBC):
        self.channels = BBC
        Tvcontroller.BBC = 1

    def __init__(self, TV1000):
        self.channels = TV1000
        Tvcontroller.TV1000 = 2

    def __init__(self, Discovery):
        self.channels = Discovery
        Tvcontroller.Discovery = 3

    def channels():
        my_channel = int(input("Turn the chanel \n1 for first_channel\n2 for second_channel\n3 for last_channel\n4 for is_exist"))
        if my_channel == 1:
            print('BBC')
        elif my_channel == 2:
            print('TV1000')
        elif my_channel == 3:
            print('Discovery')
        elif my_channel == 4:
            print('EXIT')
        pass

Tvcontroller.channels()


#TASK_3 NO WORKS ЧОРНОВИК
class TVController:

    def __init__(self, BBC):
        self.first_channel = BBC
        TVController.BBC = 1

    def __init__(self, TV1000):
        self.second_channel = TV1000
        TVController.TV1000 = 2

    def __init__(self, Discovery):
        self.last_channel = Discovery
        TVController.Discovery = 3

    def __init__(self, Exit):
        self.exit = Exit
        TVController.Exit = 4

    def first_channel():
        print(f'BBC')
        return ()

    def second_channel():
        print(f'TV1000')
        return ()

    def last_channel():
        print(f'first channel')
        return ()

    def exit():
        print(f'EXIT')
        return ()

my_channel = TVController(input('Turn the chanel \n1 for first_channel\n2 for second_channel\n3 for last_channel\n4 for exit'))
TVController.first_channel()
TVController.second_channel()
TVController.last_channel()
TVController.exit()
