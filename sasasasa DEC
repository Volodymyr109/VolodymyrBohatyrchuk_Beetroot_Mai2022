#TASK_1
from functools import wraps

def logger(func):
    @wraps(func)
    def wrapper(*args):
        print("This is operation: ", func.__name__, *args)
        return func(*args)
        #function_to_decorate(add, square_all)

    return wrapper

@logger
def add(x, y):
    return x + y
print(add(1, 4))

@logger
def square_all(*args):
    return [arg ** 2 for arg in args]

print(add(1, 4))
print(square_all(4))

